
include ../../mixins.jade

.swiper-slide.swiper__slide
	#slide-45.slide
		header.slide__header.header--with-icon
			.header__title
				span.text--pink
					| SPIRAL:
				span.text
					| Переключение на Исентресс (RAL) с ИП/р обеспечивает статистически значимое уменьшение показателей липидного профиля<sup>9</sup>
			img.header__icon(src="images/heart-icon.png")
		main.slide__main
			.box
				.diagram.diagram--box
					header.diagram__header
						.diagram__title
							| Изменение уровня показателей липидного профиля от исходного к 48 неделе
					main.diagram__main
						img.scheme__img(src="images/slides/45/1.jpg")
					footer.diagram__footer
						.diagram__btn(data-popup="popup-45")
							| Дизайн исследования
				.diagram__caption
					| Martinez E, et al. AIDS. 2010;24:1697–1707
		mixin data
			.footer__nav
				nav.nav
					ul.list
						li.list__item
							a.nav__item
								.btn.btn--circle
									img.scheme__img(src="images/left.png")
		+slide__footer('nav','data')
	