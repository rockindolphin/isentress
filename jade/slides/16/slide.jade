include ../../mixins.jade

.swiper-slide.swiper__slide
	#slide-16.slide
		header.slide__header.header--with-icon
			.header__title
				span.text--pink
					| STARTMRK:  
				span.text
					| быстрое снижение вирусной нагрузки<sup>26</sup>					
			img.header__icon(src="images/lungs-icon.png", data-goto="lungs")
		main.slide__main
			.box--top
				.pane.pane--gray.pane--wide
					h4.text
						span.text--pink
							| Достоверно короче время достижения неопределяемой вирусной нагрузки 
						span
							| при терапии Исентрессом по сравнению с EFV (P < 0,001)<sup>26</sup>
			.box--bottom
				.diagram.diagram--box
					main.diagram__main
						img.scheme__img.swiper-lazy(data-src="images/slides/16/1.jpg")
						.swiper-lazy-preloader
					footer.diagram__footer
						.diagram__caption
							| Adapted from Lennox et al. 2014
						.diagram__btn(data-popup="popup-16")
							| Дизайн исследования
		mixin data
			.footer__nav
				nav.nav
					ul.list
						li.list__item
							a.nav__item
								.btn.btn--circle
									img.scheme__img(src="images/right.png", data-goto="next")
		+slide__footer('nav','data')