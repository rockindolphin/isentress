include ../../mixins.jade

.swiper-slide.swiper__slide
	#slide-25.slide
		header.slide__header.header--with-icon
			.header__title
				span.text--pink
					| Доказанная высокая эффективность 
				div.text
					| Исентресса у детей<sup>24</sup>
			img.header__icon(src="images/bear-icon.png", data-goto="bear")
		main.slide__main
			.diagram.diagram--box
				main.diagram__main
					img.scheme__img.swiper-lazy(data-src="images/slides/25/1.jpg")
					.swiper-lazy-preloader
				footer.diagram__footer
					.diagram__btn(data-popup="popup-24")
						| Дизайн исследования
		mixin data
			.footer__nav
				nav.nav
					ul.list
						li.list__item
							a.nav__item
								.btn.btn--circle
									img.scheme__img(src="images/left.png", data-goto="prev")
						li.list__item
							a.nav__item
								.btn.btn--circle
									img.scheme__img(src="images/right.png", data-goto="next")
		+slide__footer('nav','data')